<h1>Hello this is recipe page</h1>

<!-- <% %> -> for wrapping code.
<%= %> -> for wrapping variable. -->
<style>
    .container{
        display: flex;
    }
    .recipe{
        border: 2px solid tomato;
        margin-left: 20px;
        width: 100px;
        height: 80px;
    }
    .recipeImg{
        height: 70%;
    }
    .recipeName{
        text-align: center;
    }
    h3{
        margin: 0;
    }
    .self{
        margin-top: 30px;
    }
</style>

<div class="container">
   <% recipes.forEach((recipe)=>{ %>
        <div class="recipe">
            <div class="recipeImg">
                <img src="<%= recipe.imgURL %>" alt="<%= recipe.name%>">
            </div>
            <div class="recipeName">
                <h3>
                    <%= recipe.name%>
                </h3>
            </div>
        </div>
    <% }) %>
</div>

<div class="self">
    <form action="/addRecipe" method="POST">
        <input type="text" name="recipeName">
        <input type="submit" value="Click to add recipe!">
    </form>
</div>